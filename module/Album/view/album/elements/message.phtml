<?php

if (isset($flashMessages) && count($flashMessages) > 0) {
    foreach ($flashMessages as $message) {
        if (isset($message['error']))
            echo '<div class="alert alert-error">' . $message['error'] . '</div>';
        elseif (isset($message['success']))
            echo '<div class="alert alert-success">' . $message['success'] . '</div>';;
    }
}
